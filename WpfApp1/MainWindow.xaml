<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="70*" />
			<RowDefinition Height="706*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Margin="0,0,0,378" Grid.RowSpan="2">
			<Label Content="光伏最高负荷" HorizontalAlignment="Left" Margin="27,4,0,0" VerticalAlignment="Top"/>

		</Grid>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="157*" />
				<ColumnDefinition Width="389*" />
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0">
				<StackPanel>
					<Button Name="Btn_Page1" Content="每日电量报表" Margin="5,10,0,0" Click="Btn_Page1_Click"/>
					<Button Name="Btn_Page2" Content="安全生产例会" Margin="5,10,0,0" Click="Btn_Page2_Click"/>					
				</StackPanel>
				
			</Grid>
			<Grid Grid.Column="1">
				<ContentControl x:Name="PowerPage">
				</ContentControl>
			</Grid>
			
		</Grid>
	</Grid>
</Window>
